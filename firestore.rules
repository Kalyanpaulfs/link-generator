rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    // Check if the REQUESTER is an admin by looking up their user document
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isValidLink() {
      let data = request.resource.data;
      return 
        data.slug is string &&
        data.whatsappNumber is string &&
        data.userId == request.auth.uid && 
        data.slug.size() >= 4 && 
        data.slug.size() <= 30 &&
        data.active is bool;
    }

    // --- Collection Rules ---

    match /users/{uid} {
      // Owner can read, Admin can read/write (to manage subscriptions)
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isAdmin(); 
      // Note: First admin must be set via Firebase Console or hardcoded rule if needed.
    }

    match /links/{linkId} {
      // Owner can read/write, Admin can read (to view all links)
      allow read: if (isAuthenticated() && resource.data.userId == request.auth.uid) || isAdmin();
      
      // Admin can also delete/update specific links if needed (moderation)
      allow write: if isAdmin();

      // Standard user logic
      allow create: if isAuthenticated() && 
                    request.resource.data.userId == request.auth.uid &&
                    isValidLink();

      allow update: if isAuthenticated() && 
                    resource.data.userId == request.auth.uid &&
                    request.resource.data.userId == request.auth.uid &&
                    isValidLink();

      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}
